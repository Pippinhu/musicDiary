.container{
  display:flex;
  flex-direction:column;
  padding:30rpx;
  /* padding-bottom:100rpx; */
}

.headline{
  font-size:60rpx;
  font-weight:bold;
  margin-left:25rpx;
  margin-bottom:20rpx;
}

.content{
  display:flex;
  flex-direction:column;
  padding:30rpx;
}

.postList{
  display:flex;
  flex-direction:column;
  margin-bottom:90rpx;
}

.songName{
  color:rgba(34,34,34,1);
  font-size:30rpx;
  font-weight:bold;
}

.singer{
  font-size:30rpx;
  color:	#222222;
  opacity:0.3
}

.play_hotzone{
  width:100rpx;
  height:200rpx;
  position:absolute;
  right:78rpx;
  display:flex;
  align-items:center;
  justify-content:center;
}

.play-icon{
  /* position:absolute;
  right:78rpx; */
	width:40rpx;
  height:40rpx;
  margin-left:50rpx;
  margin-bottom:20rpx;
}

.feelings{
  width:550rpx;
  position:relative;
  margin-top:22rpx;
  padding:28rpx 38rpx;
  font-size:26rpx;
  letter-spacing:2rpx;
  color:rgba(153,153,153,1);
  line-height:40rpx;
  background-color:#FFFFFF;
  /* box-shadow:2px 2px 30px 	#DCDCDC; */
  border-radius:15rpx;
}

.arrower{
  position: absolute;
  top: 5px;
  right: -16px;
  /* 圆角的位置*/
  width: 0;
  height: 0;
  font-size: 0;
  border: solid 4px;
  border-color: white #4D4948 #4D4948 white;

}

.info{
  display:flex;
  flex-direction:row;
  align-items:center;
}

.pic{
  width:100rpx;
  height:100rpx;
}

.songInfo{
  display:flex;
  flex-direction:column;
  margin-left:28rpx;
}

