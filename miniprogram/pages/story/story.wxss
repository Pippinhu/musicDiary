.container{
  display:flex;
  flex-direction:column;
  padding:30rpx;
  padding-bottom:100rpx;
}

.headline{
  font-size:60rpx;
  font-weight:bold;
  margin-left:25rpx;
  margin-bottom:20rpx;
}

.content{
  display:flex;
  flex-direction:column;
  padding:30rpx;
}

.postList{
  display:flex;
  flex-direction:column;
  margin-bottom:100rpx;
}

.songName{
  font-size:30rpx;
}

.singer{
  font-size:30rpx;
  color:	#C0C0C0;
}

.play-icon{
  position:absolute;
  right:80rpx;
	width:30rpx;
  height:30rpx;
  margin-right:20rpx;
}


.feelings{
  margin-top:20rpx;
  padding:25rpx;
  font-size:30rpx;
  letter-spacing:3rpx;
  color:#969AA5;
  line-height:1.5em;
  box-shadow:2px 2px 30px 	#DCDCDC;
  border-radius:15rpx;
}

.info{
  display:flex;
  flex-direction:row;
  align-items:center;
}

.pic{
  width:100rpx;
  height:100rpx;
}

.songInfo{
  display:flex;
  flex-direction:column;
  margin-left:20rpx;
}

.out{
  background-color:white;
  position:fixed;
  bottom:0;
  width:100%;
  height:120rpx;
  display:flex;
  justify-content:center;
  align-items:center;
}

.core{
  background-color:rgba(255,99,99,1);
  color:white;
  position:fixed;
  padding:20rpx 150rpx;
  border-radius:36rpx;
  font-size:25rpx;
}